@page
@model YoMarket.Pages.Admin.EditModel
@{
}
<h1>ویرایش کالا</h1>

<form method="post" enctype="multipart/form-data">
    <div class="" dir="rtl">
        <input type="hidden" asp-for="Product.Id"/>
        <dl class="dl-horizontal">
            <dl>
                <dd><label asp-for="Product.ProductName"></label></dd>

            </dl>
            <dt>
                <input asp-for="Product.ProductName" class="form-control" />
                <span asp-validation-for="Product.ProductName"></span>
            </dt>

            <dl>
                <dd><label asp-for="Product.ProductDescription"></label></dd>

            </dl>
            <dt>
                <textarea class="form-control" asp-for="Product.ProductDescription"> </textarea>
                <span asp-validation-for="Product.ProductDescription"></span>
            </dt>


            <dl>
                <dd><label asp-for="Product.QuantityInStock"></label></dd>

            </dl>
            <dt>
                <input class="form-control" asp-for=" Product.QuantityInStock" class="form-control" />
                <span asp-validation-for="Product.QuantityInStock"></span>
            </dt>

            <dl>
                <dd><label asp-for="Product.Price"></label></dd>

            </dl>
            <dt>
                <input class="form-control" asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price"></span>
            </dt>


            <dl>
                <dd><label asp-for="Product.Picture"></label></dd>

            </dl>
            <dt>
                <input asp-for="Product.Picture" />
                <span asp-validation-for="Product.Picture"></span>
            </dt>


            <dl>
                <dd><label asp-for="Product.Picture"></label></dd>

            </dl>
            <dt>
                <input type="submit" class="btn btn-success" asp-for="Product.Picture" value="ثبت" />
            </dt>
        </dl>
    </div>
</form>
