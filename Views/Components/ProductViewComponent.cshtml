@model IEnumerable<Category>

    <div class="row">
        <ul class="list-group">
            @foreach (var item in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="#">@item.Name</a>
                    <span class="badge badge-primary badge-pill">11</span>
                </li>
            }

        </ul>
    </div>